<main class="container py-5">
    <div>
    <div class="py-5 mx-auto">
      <div class="navbar">
          <h1 class="text-primary"><%=@support.title %></h1>
        <div class=" ms-auto"> <%= link_to 'Back to Previous Page', support_index_path, class: 'w-10 btn btn-sm btn-primary'%> </div>

          <div class=" btn btn dropdown">
            <a class="d-block link-body-emphasis text-decoration-none" data-bs-toggle="dropdown" aria-expanded="false">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
              <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
            </svg></a>
            <ul class="dropdown-menu text-small shadow">
              <li><a class="dropdown-item" <%=link_to 'New', new_support_path %></a></li>
              <li><a class="dropdown-item" <%=link_to 'Edit', edit_support_path(@support) %></a></li>
              <li><a class="dropdown-item" <%=link_to 'Delete', support_path(@support), method: :delete, data:{confirm: "Уверены в этом?"} %></a></li>
            </ul>
          </div>
      </div>
      <div class="border"></div>
      <br>
        <p><%=@support.body%></p>
      <br>
      </div>
    </div>

  <!-- Comments window -->
  <div class="container bg-body-tertiary p-5 rounded py-sm-5">
    <h3 class="text-primary display-6 fw-normal">Комментарии:</h3>
    <div class="list-group border-bottom">
    <%@support.comments.each do |comments_msg| %>
      <a class="list-group-item list-group-item-action py-3 lh-sm"> <!-- href="<%=support_path(comments_msg)%>" -->
        <div class="d-flex w-100 align-items-center justify-content-between">
          <strong class="mb-1"><h3><%=comments_msg.username %></h3></strong>
        </div>
        <div class="col-10 mb-1 small"><p><%=comments_msg.body %></p></div>
      </a>
    <% end %>
    </div>
  </div>

  <div>
    <br>
        <h3 class="text-primary display-10 fw-normal">Добавить комментарий</h3>
        <%= form_for([@support, @support.comments.build]) do |f| %>
          <span>
          Имя пользователя:<br>
            <%= f.text_field(:username,
                             {class: 'form-control',
                              :placeholder=>"Имя пользователя: (Не больше 10 символов)"}) %>
        </span>
          <br>
          <span>
          Комментарий:<br>
            <%= f.text_area(:body,
                            {class: 'form-control',
                             :placeholder=>"Текст комментария",
                             :size =>"10x7"}) %>
        </span>
          <br>
          <p>
            <%=f.submit 'Send', class: 'w-50 btn btn-lg btn-primary' %>
          </p>
        <% end %>
      </div>


</main>
