<div class="container my-5">
  <div class="bg-body-tertiary p-5 rounded">
    <div class=" col-sm-8 py-5 mx-auto">
      <h1 class="display-5 fw-normal">Проблемки?!</h1>
      <%= form_for :support, url: support_index_path do |f| %>
        <% if @support.errors.any? %>
          <% @support.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger"><%= msg %></div>
          <% end %>
        <% end %>
        <span>
          Тема:<br>
          <%= f.text_field(:title,
                           {class: 'form-control',
                            :placeholder=>"Тема (Не больше 15 символов)"}) %>
        </span>
        <br>
        <span>
          Описание проблемы:<br>
          <%= f.text_area(:body,
                          {class: 'form-control',
                           :placeholder=>"Опишите подробнее суть проблемы",
                           :size =>"10x7"}) %>
        </span>
        <br>
        <p>
          <%=f.submit 'Save Message', class: 'w-50 btn btn-lg btn-primary' %>
        </p>
      <% end %>
    </div>
  </div>
</div>
